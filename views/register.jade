extends layout

block content
	.container
		form.form-signin(role='form', action="/register",method="post", style='max-width: 300px;')
			h2.form-signin-heading Sign Up here
			input.form-control(type='text', name="forename", placeholder='First Name')
			input.form-control(type='text', name="surname", placeholder='Last Name')
			input.form-control(type='text', name="username", placeholder='Email Address')
			input.form-control(type='password', name="password", placeholder='Password')
			input.form-control(type='password', name="passwordC", placeholder='Confirm Password')
			button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign Up